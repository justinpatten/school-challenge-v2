@using System.Collections.Generic
@model System.Collections.Generic.IEnumerable<SchoolChallenge.Models.Teacher>

@{
    ViewBag.Title = "Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teachers</h2>
<p>
    @Html.ActionLink("Add Teacher", "Add", "Teachers", null, new { @class = "btn btn-primary" })
</p>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Teacher Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Number of Students</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td>@teacher.Id</td>
                            <td>@teacher.FirstName</td>
                            <td>@teacher.LastName</td>
                            <td>@teacher.NumberOfStudents</td>
                            <td>@Html.ActionLink("Edit", "Edit", "Teachers", new { id = teacher.Id }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Import CSV", "Import", "Teachers", null, new { @class = "btn btn-primary" })
</div>